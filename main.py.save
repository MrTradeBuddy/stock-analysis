        parts = text.strip().split()
        if len(parts) >= 2:
            symbol = "".join(parts[1:]).replace(" ", "").upper().replace(" ", "")
            stock_info = get_stock_price(symbol)
            if stock_info:
                send_message(chat_id, f"ğŸ“Š {symbol}: â‚¹{stock_info['price']} ({stock_info['change']})")
