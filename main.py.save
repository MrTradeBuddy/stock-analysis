    message = data.get("message", {})
    text = message.get("text", "")
    chat_id = message.get("chat", {}).get("id")

    if text.strip() == "/start":
        send_message(chat_id, "ğŸ‘‹ Hello Mr. Buddy! Welcome to the stock bot world ğŸ’¼ğŸ“ˆ")
